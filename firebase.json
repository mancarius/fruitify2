{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/**",
        "function": "api",
        "destination": "https://www.fruityvice.com/**"
      },
      {
        "source": "**",
        "destination": "/index.html",
        "function": "app"
      }
    ]
  }
}